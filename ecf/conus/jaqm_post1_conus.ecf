%include <head.h>

set -x

export envir=%ENVIR%
export job=aqm_post1_conus_%CYC%
export cyc=%CYC%

# versions file for AQM CMAQ conus sets $cmaq_ver
VERSION_FILE=/nw${envir}/versions/cmaq_conus.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ecflow_client --msg="***JOB ${ECF_NAME} ERROR: Version File $VERSION_FILE does not exist ***"
  ecflow_client --abort
  exit
fi

/nw$envir/cmaq.${cmaq_ver}/jobs/JAQM_POST1_CS

if [ $? -ne 0 ]; then
   ecflow_client --msg="***JOB ${ECF_NAME} ERROR RUNNING J-SCRIPT ***"
   ecflow_client --abort
   exit
fi

