 pio_init.o \
 pio_end.o \
 pm3err.o \
 pm3exit.o \
 pm3warn.o \
 pshut3.o \
 pwrite3.o \
 pwrgrdd.o \
 readbndy.o \
 subdmap.o \
 wrsubmap.o

.SUFFIXES: .F .f .c

$(LIBNAME) : $(OBJS)
	$(FC) $(FFLAGS) -c $<
	ar -rv -X64 $@ $?
	chmod 644 $@

