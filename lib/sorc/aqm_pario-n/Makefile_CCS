 LIBNAME = libaqm_pario.a
#LIBNAME = libpario.debug.a

 IOAPI =  /nwprod/lib/sorc/pario-n
 FC = ncepmpxlf90
 FSTD = -qsave -qfixed=132 -qarch=auto -qtune=auto
 FFLAGS = $(FSTD) -I $(IOAPI) -O3 -qstrict -Q
#FFLAGS = $(FSTD) -I $(IOAPI) -g -qfloat=nans

 OBJS= \
 pinterpb_mod.o \
